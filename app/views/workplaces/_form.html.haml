= simple_form_for @workplace, html: { class: 'col-md-6 col-md-offset-3 text-center', role: 'form1' } do |f|

  .row.col-md-offset-3
    .col-md-8
      .form-group
        = f.input :name
    .col-md-8
      .form-group
        = f.input :number_id
    .col-md-8
      .form-group
        = f.input :type_vpf, collection: ["Транспортная","Технологическая","Транспортно-технологическая"]
    .col-md-8
      .form-group
        = f.input :shift_duration
  .row.col-md-offset-3
    .col-md-8
      .form-group
        = f.input :number_of_shift
    .col-md-8
      .form-group
        = f.association :subdivision
        -# = f.input :kind_of_action


  %br/

  .form-actions
    = link_to "Назад", Workplace,  class: 'btn btn-primary'
    = f.submit 'Сохранить', class: 'btn btn-primary'
